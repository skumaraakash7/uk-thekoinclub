{% comment %}
------------------------------------------------------------------------------
  Section: Split payment small
  - Split payment snippet
------------------------------------------------------------------------------
{% endcomment %}

{% for i in (1..3) %}

    {% capture split_payment_logo %}split_payment_logo_{{i}}{% endcapture %}

    {% assign this_logo = settings[split_payment_logo] %}

    {% if this_logo != 'none' %}

        <div
        class="popup critical-hide"
        js-popup="popup"
        js-popup-id="{{this_logo}}"
        >
            <div class="popup__wrapper">
                <div class="popup__content background-color-white">
                    <div class="relative">
                        <div
                            class="popup__close"
                            js-popup="close"
                        >{% render 'icons' with icon: 'close' %}</div>

                        <div class="popup-content-{{this_logo}} color-black">
                            {%- render 'popup-content' with popup: this_logo -%}
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="popup-overlay background-opal-black"
                js-popup="close"
            ></div>
        </div>

    {% endif %}

{% endfor %}