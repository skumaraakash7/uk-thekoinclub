.accordion .accordion-trigger {
  cursor: pointer;
  white-space: nowrap;
  padding-right: 30px;
  margin-bottom: 10px; }

.accordion .collection-search__filter-trigger .accordion-icon {
  top: 5px; }

.accordion .accordion-icon {
  position: absolute;
  top: 1px;
  right: 0;
  width: 15px;
  height: 15px; }
  .accordion .accordion-icon__plus-minus {
    height: 1px;
    width: 100%;
    position: absolute;
    top: 50%;
    margin-top: -1px; }
  .accordion .accordion-icon__plus {
    transform: rotate(-90deg);
    transition: transform 0.2s cubic-bezier(0.42, 0, 1, 1); }
  .accordion .accordion-icon--chevron {
    width: 18px;
    height: 25px;
    right: 5px;
    top: 50%;
    transform: translateY(-50%); }
  .accordion .accordion-icon .icon--chevron {
    fill: #408ccc;
    transform: rotate(90deg);
    transition: transform 0.2s cubic-bezier(0.42, 0, 1, 1);
    width: 100%;
    height: 100%;
    display: block; }

.accordion .accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: all 0.2s cubic-bezier(0.42, 0, 1, 1); }

.accordion.is-active .accordion-icon__plus {
  transform: rotate(0deg); }

.accordion.is-active .icon--chevron {
  transform: rotate(-90deg); }

.accordion.is-active .accordion-content {
  max-height: 500px; }

