<!--go cart modal fail-->
<div class="go-cart__modal go-cart__modal--fail js-go-cart-modal-fail">

    <div class="go-cart-modal">

        <!--go cart modal close-->
        <div class="go-cart-modal__close js-go-cart-modal-fail-close">
            {% render 'icons' with icon: 'cross' %}
        </div>
        <!--end go cart modal close-->

        <!--go cart modal content-->
        <div class="go-cart-modal__content js-go-cart-modal-fail-content">
            {{ 'general.404.error' | t }}
        </div>
        <!--end go cart modal content-->

    </div>

</div>
<!--end go cart modal fail-->

<!--go cart modal-->
<div class="go-cart__modal js-go-cart-modal">
</div>
<!--end go cart modal-->

<!--go cart drawer-->
<div class="go-cart__drawer js-go-cart-drawer">

    <div class="go-cart-drawer flexbox">

        <!--go cart drawer close-->
        <div class="go-cart-drawer__header border-bottom border-color-light-grey">

            <div class="relative">
                <h6 class="go-cart-drawer__title h6 bold caps no-margin-bottom text-center">{{ 'cart.drawer.header' | t }}</h6>
                <div class="go-cart-drawer__close js-go-cart-drawer-close">
                    {% render 'icons' with icon: 'cross' %}
                </div>
            </div>

        </div>
        <!--end go cart drawer close-->

        {% render 'free-shipping' %}

        <!--go cart drawer content-->
        <div class="go-cart-drawer__content-wrap">
            <div class="go-cart-drawer__content js-go-cart-drawer-content"></div>
            {% render 'cart-upsells' %}
        </div>
        <!--end go cart drawer content-->

        <!--go cart drawer buttons-->
        <div class="go-cart-drawer__footer js-go-cart-drawer-footer border-top border-color-light-grey">

            <!--go cart drawer subtotal-->
            <div class="go-cart-drawer__subtotal">
                <span class="h3 no-margin-bottom">{{ 'cart.general.subtotal' | t }}: </span>
                <span class="go-cart-drawer__subtotal-price js-go-cart-drawer-subtotal h3 no-margin-bottom"></span>
            </div>
            <!--end go cart drawer subtotal-->

            {% render 'split-payment-small' with split_price: cart.total_price, split_type: 'cart' %}

            {% include 'ZooomyCartTerms' %}

            <a href="/checkout/" class="go-cart__button button button--yellow" id="checkout-button">
                {{ 'cart.general.checkout' | t }}
            </a>

        </div>
        <!--end go cart drawer buttons-->

    </div>

</div>
<!--end go cart drawer-->

<!--go cart overlay-->
<div class="go-cart__overlay js-go-cart-overlay">
</div>
<!--end go cart overlay-->

